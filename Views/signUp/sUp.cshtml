        <div class="wrapper" >
        <form class="form-signin" method="post" action="/signUp/save">       
          <h2 class="form-signin-heading">SignUp</h2>
            <input type="text" class="form-control" name="u.firstName" placeholder="First Name" required="required" style="margin-bottom:1vw" />
            <input type="text" class="form-control" name="u.lastName" placeholder="Last Name"  required="required" style="margin-bottom:1vw" />
            <input type="text" class="form-control" name="u.gender" placeholder="Gender" required="required" style="margin-bottom:1vw" />
          <input type="text" class="form-control" name="u.email" placeholder="Email Address" required="required" id="emailAdd" />
            @Scripts.Render("~/bundles/jquery")
            <script>
                $(document).ready(function () {
                    $('#emailAdd').focusout(function () {
                        var email = $('#emailAdd').val();
                        $.getJSON("/signUp/validateEmail?mailId=" + email, function (x) {
                            if (x)
                            {
                                $('#emailErr').text("Email Address available");
                            }
                            else {                                                                                                           
                                $('#emailErr').text("**This Email already exists...Please try other");
                                $('#emailAdd').val('');
                            }
                        });
                    });
                });
            </script>
            <div id ="emailErr" style="margin-bottom:1vw ; font-size:1vw ; color:red ; margin-left: 1vw" ></div>
          <input type="password" class="form-control" name="u.password" placeholder="Password" style="margin-bottom:1vw" />
            <button class="btn btn-lg btn-primary btn-block" type="submit" id="emailAddErr">Sign Up</button>   
            </form>
        </div>

